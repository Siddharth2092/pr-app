<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView android:id="@+id/pr_user_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/pr_user_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/pr_user_img"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/pr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toEndOf="@id/pr_user_img"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/crated_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toEndOf="@id/pr_user_img"
        app:layout_constraintTop_toBottomOf="@id/pr_title"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/closed_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toEndOf="@id/pr_user_img"
        app:layout_constraintTop_toBottomOf="@id/crated_on"
        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>